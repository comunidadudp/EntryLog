@{
    Layout = "_Layout";
    ViewBag.Title = "Recuperar cuenta";
}


<div class="card card-plain mt-8" style="min-width: 25vw">
    <div class="card-header pb-0 text-left bg-transparent text-center">
        <img src="~/assets/images/logo_entrylog_light.png" alt="navbar brand" class="navbar-brand" height="50">
    </div>
    <div class="card-body">
        <form id="recover-start-form" role="form" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <label class="text-muted pb-2">Ingrese el correo electrónico con el que se creó la cuenta</label>
            <div class="mb-3">
                <input type="email" class="form-control" id="email" name="email" required
                       placeholder="email@dominio.com" aria-label="Email" aria-describedby="email-addon">
            </div>
            <div id="recover-start-form-btn" class="text-center">
                <button type="submit" class="btn btn-dark w-100 mt-4 mb-3">Recuperar cuenta</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/account.recover.js"></script>
}
