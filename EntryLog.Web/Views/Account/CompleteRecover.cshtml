@{
    Layout = "_Layout";
    ViewBag.Title = "Completar Recuperar cuenta";
}

<div class="card card-plain mt-8" style="min-width: 25vw">
    <div class="card-header pb-0 text-left bg-transparent text-center">
        <img src="~/assets/images/logo_entrylog_light.png" alt="navbar brand" class="navbar-brand" height="50">
    </div>
    <div class="card-body">
        <h6 class="pb-2">Ingrese la nueva contraseña y confírmela</h6>

        <form id="recover-complete-form" role="form" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <label class="text-muted pb-2">Contraseña</label>
            <div class="mb-3">
                <input type="password" class="form-control" id="password" name="password" required
                       placeholder="" aria-label="password" aria-describedby="password">
            </div>
            <label class="text-muted pb-2">Confirme su contraseña</label>
            <div class="mb-3">
                <input type="password" class="form-control" id="passwordConf" name="passwordConf" required
                       placeholder="" aria-label="password-conf" aria-describedby="password-conf">
            </div>
            <div id="recover-complete-form-btn" class="text-center">
                <button type="submit" class="btn btn-dark w-100 mt-4 mb-3">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const success = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Success));
        const message = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Message));

        $.notify({
            icon: 'icon-bell',
            title: 'Notificación',
            message: message,
        }, {
            type: success ? 'success' : 'warning',
        });

    </script>

    <script src="~/js/account.recover.complete.js"></script>
}
